<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_main"
    tools:context=".MainActivity">

    <TextView
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enquiry"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="30dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/group_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Selct Country"
            android:textSize="15sp"
            android:textColor="#2AE9DC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:drawableRight="@drawable/ic_down"
            android:textColor="#000000"
            android:enabled="false"
            android:text="Country"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Selct State"
            android:textSize="15sp"
            android:textColor="#2AE9DC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:drawableRight="@drawable/ic_down"
            android:textColor="#000000"
            android:enabled="false"
            android:text="State"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Selct District"
            android:textSize="15sp"
            android:textColor="#2AE9DC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:drawableRight="@drawable/ic_down"
            android:textColor="#000000"
            android:enabled="false"
            android:text="District"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView

            android:text="Selct Centre Name"
            android:textSize="15sp"
            android:textColor="#2AE9DC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:drawableRight="@drawable/ic_down"
            android:textColor="#000000"
            android:enabled="false"
            android:text="Centre Name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
            android:text="SELECT CENTRE"
            android:paddingHorizontal="10sp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/background_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="30dp"
            android:text="Automatically Find Nearest Center"
            android:textSize="18sp"
            android:textColor="#2AE9DC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</LinearLayout>